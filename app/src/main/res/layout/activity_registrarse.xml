<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarseActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="429dp"
        android:layout_height="744dp"
        android:background="#23314E"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="208dp" />

        <EditText
            android:id="@+id/emaileditTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EBEAE8"
            android:drawableTint="#EBEAE8"
            android:ems="40"
            android:foregroundTint="#EBEAE8"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:shadowColor="#EBEAE8"
            android:textColor="#F1F1F1"
            android:textColorHint="#F1F1F1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/contrase単aeditTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1F1F1"
            android:drawableTint="#F1F1F1"
            android:ems="10"
            android:foregroundTint="#F1F1F1"
            android:hint="contrase単a"
            android:inputType="textPassword"
            android:scrollbarSize="48dp"
            android:shadowColor="#F1F1F1"
            android:textColor="#F1F1F1"
            android:textColorHint="#F1F1F1" />

        <EditText
            android:id="@+id/contrase単aeditTextTextPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1F1F1"
            android:drawableTint="#F1F1F1"
            android:ems="10"
            android:foregroundTint="#F1F1F1"
            android:hint="repita su contrase単a"
            android:inputType="textPassword"
            android:scrollbarSize="48dp"
            android:shadowColor="#F1F1F1"
            android:textColor="#F1F1F1"
            android:textColorHint="#F1F1F1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:backgroundTint="#90BF4B"
                android:onClick="inRegistrar"
                android:text="registrar" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>